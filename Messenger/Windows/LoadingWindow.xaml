<Window x:Class="Messenger.Windows.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Messenger.Windows"
        mc:Ignorable="d"
        Title="LoadingWindow" Height="200" Width="200" ResizeMode="NoResize" WindowStyle="None" WindowStartupLocation="CenterOwner">
    <Grid>
        <ProgressBar Style="{DynamicResource MaterialDesignCircularProgressBar}" HorizontalAlignment="Center" VerticalAlignment="Center" Width="100" Height="100" Value="50"  x:Name="LoadingProgressBar" IsIndeterminate="True"/>
    </Grid>
</Window>
